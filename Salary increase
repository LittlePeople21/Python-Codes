salario = float(input('Qual o teu salário?\nR: R$'))

print('-' * 40)
if salario >= 1250:
    
    salario = salario + (salario * 10/100)
    
    print(f'Seu salário a partir de agora será R${salario:.2f}')
    
else:
    
    salario = salario + (salario * 15/100)
    
    print(f'Seu salário a partir de agora será R${salario:.2f}')
print('-' * 40)
